         </trim>
    </insert>

    <update id="updateCGjZysz" parameterType="CGjZysz">
        update c_gj_zysz
        <trim prefix="SET" suffixOverrides=",">
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="zyName != null">zy_name = #{zyName},</if>
            <if test="xyzyZydm != null">xyzy_zydm = #{xyzyZydm},</if>
            <if test="zyCreatYear != null">zy_creat_year = #{zyCreatYear},</if>
            <if test="xkml != null">xkml = #{xkml},</if>
            <if test="zylb != null">zylb = #{zylb},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
